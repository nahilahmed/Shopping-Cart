
<div class="row">
  {{# each products}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagepath}}" alt="..." class="img-responsive">
      <div class="caption">
        <h3 class="text-center"><b>{{ this.title }}</b></h3>
        <p class="description text-center">{{ this.description }}</p>
        <br>
        <div class="clearfix">
          <div class="price pull-left">${{this.price}}</div>
          <a href="#" class="btn btn-primary pull-right" role="button">Buy</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
